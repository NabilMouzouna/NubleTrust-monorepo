{
  "name": "nubletrust",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "pnpm --filter @nubletrust/postgres-drizzle run db:generate",
    "db:migrate": "pnpm --filter @nubletrust/postgres-drizzle run db:migrate",
    "db:studio":  "pnpm --filter @nubletrust/postgres-drizzle run db:studio",
    "db:health": "pnpm --filter @nubletrust/postgres-drizzle run db:health"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
