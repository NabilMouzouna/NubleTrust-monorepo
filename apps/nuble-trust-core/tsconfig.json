{
  "extends": "@nubletrust/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@nubletrust/postgres-drizzle" : ["../../packages/postgres-drizzle/src/index.ts"],
      "@nubletrust/core-types": ["../../packages/core-types/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
